extends ../layout

include page/page
include ../common/paging

block head-css
	+list_page_header_css

block content
	div.container
		input#cur_page_curPageType(type="hidden", value="#{curPageType}")
		div.span12.my-real-content
			div.span3.left-nav
				include nav/leftNav
			div.span9.my-content
				+operation_bar_on_task
				div.items-container#my-tool-items-container
					+list_tool_items(tools.items)
				div.page_container(page_for="tool_item_list")
					+list_items_pagination(totalCount, pageSize, curPage)
				
block footer-script
	+list_page_footer_script
	+list_page_footer_script_tool